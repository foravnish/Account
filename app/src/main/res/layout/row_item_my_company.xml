<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:paddingTop="8dp"
        android:clickable="true"
        android:id="@+id/parent_container"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:background="@drawable/address_back"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:layout_height="wrap_content">


            <RadioGroup
                android:layout_marginRight="10dp"
                android:id="@+id/cb_name_parent_grup"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:backgroundTint="@color/app_black" />


            <TextView
                android:id="@+id/tv_gst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="18dp"
                android:textColor="@color/gray_login"
                android:textSize="15sp"
                android:layout_marginLeft="45dp"
                android:text="180 St "
                android:layout_marginTop="35dp" />


        </RelativeLayout>


        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <LinearLayout
            android:id="@+id/btn_edit2"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/hint_color"/>

            <LinearLayout
                android:id="@+id/selected_address_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:gravity="center">

<!--                <Button-->
<!--                    android:id="@+id/btn_edit"-->
<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="52dp"-->
<!--                    android:text="@string/edit"-->
<!--                    android:gravity="center"-->
<!--                    android:layout_weight="1"-->
<!--                    style="?android:attr/borderlessButtonStyle"-->
<!--                    android:textColor="@color/black"-->
<!--                    android:textAllCaps="false"-->
<!--                    android:fontFamily="@font/roboto"-->
<!--                    android:textSize="@dimen/text_size_16sp"/>-->

                <Button
                    android:id="@+id/btn_delivery"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Select"
                    android:textColor="@color/white_color"
                    style="?android:attr/borderlessButtonStyle"
                    android:textAllCaps="false"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="@drawable/strock_address_green"
                    android:textSize="16sp"/>

            </LinearLayout>


        </LinearLayout>




    </LinearLayout>
</layout>
