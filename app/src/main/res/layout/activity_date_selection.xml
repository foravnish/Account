<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/orange_bc_color"
        tools:context=".LoginActivity">

<!--        <EditText-->
<!--            android:id="@+id/edtAccount"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_margin="25dp"-->
<!--            android:inputType="number"-->
<!--            android:padding="15dp"-->
<!--            android:background="@drawable/strock"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Account Number"/>-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/esc_logo">

        </ImageView>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="15dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/fromDate"
                android:layout_width="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:padding="12dp"
                android:focusable="false"
                android:background="@drawable/strock"
                android:layout_height="wrap_content"
                android:hint="Select From Date"/>

            <EditText
                android:id="@+id/toDate"
                android:layout_width="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1"
                android:textSize="14sp"
                android:padding="12dp"
                android:focusable="false"
                android:background="@drawable/strock"
                android:layout_height="wrap_content"
                android:hint="Select To Date"/>


        </LinearLayout>



        <Button
            android:id="@+id/submit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorAccent"
            android:stateListAnimator="@drawable/state_list_animator_z"
            android:text="Submit"
            android:textColor="@color/white_color"></Button>



    </LinearLayout>
</layout>